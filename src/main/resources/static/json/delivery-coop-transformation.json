    "flows": [
        {
            "id": "legacy-dispatch",
            "name": "Legacy — Phone Dispatch",
            "sequence": [
                { "from": "customer", "to": "phone-line", "text": "\"I need a delivery to 42 Elm Street by 3pm\"", "status": "ready" },
                { "from": "phone-line", "to": "dispatcher", "text": "Dispatcher writes address and deadline on paper", "status": "wip" },
                { "from": "dispatcher", "to": "whiteboard", "text": "Adds delivery to whiteboard grid — row 14 of 22", "status": "wip", "popUp": { "type": "alert", "msg": "Whiteboard full — dispatcher erasing completed stops" } },
                { "from": "dispatcher", "to": "driver", "text": "Radios driver: \"New stop — 42 Elm, before 3pm\"", "status": "wip" },
                { "from": "driver", "to": "paper-manifest", "text": "Adds to paper route sheet — now 16 stops, no order", "status": "wip" },
                { "from": "driver", "to": "warehouse", "text": "Drives to warehouse to load package", "status": "wip" },
                { "from": "warehouse", "to": "driver", "text": "Searches shelves — finds box after 8 minutes", "status": "wip", "popUp": { "type": "issue", "msg": "No barcode system — manual shelf search" } }
            ]
        },
        {
            "id": "legacy-where-is-it",
            "name": "Legacy — Where Is My Package?",
            "sequence": [
                { "from": "customer", "to": "phone-line", "text": "\"Where's my package? I've been waiting since noon!\"", "status": "ready" },
                { "from": "phone-line", "to": "dispatcher", "text": "Dispatcher takes call — third \"where is it\" in 20 min", "status": "wip", "popUp": { "type": "alert", "msg": "28% of all calls are status checks — ties up dispatch" } },
                { "from": "dispatcher", "to": "driver", "text": "Radios driver: \"What's your ETA for 19 Pine Ave?\"", "status": "wip" },
                { "from": "driver", "to": "dispatcher", "text": "\"Uhh... maybe 45 minutes? Stuck in traffic on Main St\"", "status": "wip", "popUp": { "type": "issue", "msg": "Driver guessing — no GPS, no route plan" } },
                { "from": "dispatcher", "to": "phone-line", "text": "Relays vague ETA back to customer", "status": "wip" },
                { "from": "phone-line", "to": "customer", "text": "\"Should be about 45 minutes\" — customer frustrated", "status": "wip", "popUp": { "type": "issue", "msg": "Customer waited at home all day — considering competitor" } }
            ]
        },
        {
            "id": "app-delivery",
            "name": "Phase 1 — App-Based Delivery",
            "sequence": [
                { "from": "customer", "to": "customer-portal", "text": "Submit delivery request via web portal", "status": "ready", "phase": "driver-app" },
                { "from": "customer-portal", "to": "api-gw", "text": "POST /deliveries {pickup: Oak St, drop: Elm St}", "status": "ready", "phase": "driver-app" },
                { "from": "api-gw", "to": "dispatch-svc", "text": "Find nearest available driver", "status": "ready", "phase": "driver-app" },
                { "from": "dispatch-svc", "to": "tracking-db", "text": "INSERT delivery #2847, status: assigned", "status": "ready", "phase": "driver-app" },
                { "from": "dispatch-svc", "to": "driver-mobile", "text": "Push assignment: \"New stop — 42 Elm St\"", "status": "ready", "phase": "driver-app", "popUp": { "type": "amplify", "msg": "Driver gets turn-by-turn — no guessing" } },
                { "from": "driver-mobile", "to": "gps-stream", "text": "GPS ping every 10 seconds: {lat, lng, speed}", "status": "ready", "phase": "driver-app" },
                { "from": "gps-stream", "to": "tracking-db", "text": "UPDATE position for driver #7", "status": "ready", "phase": "driver-app" },
                { "from": "gps-stream", "to": "notify-fn", "text": "Geofence trigger: driver within 0.5 mi", "status": "ready", "phase": "driver-app" },
                { "from": "notify-fn", "to": "customer-portal", "text": "\"Your driver is 3 minutes away!\"", "status": "ready", "phase": "driver-app", "popUp": { "type": "amplify", "msg": "Customer gets live ETA — no phone call needed" } }
            ]
        },
        {
            "id": "optimized-route",
            "name": "Phase 2 — AI-Optimized Multi-Stop",
            "sequence": [
                { "from": "dispatch-svc", "to": "route-engine", "text": "Optimize 18-stop route for driver #4", "status": "ready", "phase": "optimization" },
                { "from": "route-engine", "to": "traffic-api", "text": "GET /traffic?region=downtown&time=14:00", "status": "ready", "phase": "optimization" },
                { "from": "traffic-api", "to": "route-engine", "text": "Main St congested — suggest Oak Ave bypass", "status": "ready", "phase": "optimization" },
                { "from": "route-engine", "to": "delivery-cache", "text": "Cache optimized route: 18 stops in 4.2 hours", "status": "ready", "phase": "optimization", "popUp": { "type": "amplify", "msg": "AI saves 1.5 hrs vs driver's paper route" } },
                { "from": "route-engine", "to": "driver-mobile", "text": "Push re-optimized route with live traffic", "status": "ready", "phase": "optimization" },
                { "from": "driver-mobile", "to": "gps-stream", "text": "Completion ping: delivered #2847 at 14:23", "status": "ready", "phase": "optimization" },
                { "from": "gps-stream", "to": "notify-fn", "text": "Delivery confirmed — trigger customer notification", "status": "ready", "phase": "optimization" },
                { "from": "notify-fn", "to": "customer-portal", "text": "\"Delivered! Rate your experience (1-5 stars)\"", "status": "ready", "phase": "optimization" },
                { "from": "customer-portal", "to": "rating-svc", "text": "POST /ratings {delivery: 2847, stars: 5}", "status": "ready", "phase": "optimization", "popUp": { "type": "amplify", "msg": "Ratings drive accountability + bonus pool" } }
            ]
        },
        {
            "id": "demand-planning",
            "name": "Phase 3 — Predictive Demand",
            "sequence": [
                { "from": "tracking-db", "to": "analytics-dash", "text": "Stream: 264 deliveries today, 12 drivers active", "status": "ready", "phase": "predictive" },
                { "from": "delivery-cache", "to": "analytics-dash", "text": "Stream: avg 22.1 deliveries/driver, 97% on-time", "status": "ready", "phase": "predictive" },
                { "from": "analytics-dash", "to": "demand-forecast", "text": "Predict tomorrow: Thursday + rain + month-end", "status": "ready", "phase": "predictive" },
                { "from": "demand-forecast", "to": "fleet-planner", "text": "Forecast: 310 deliveries, need 14 drivers", "status": "ready", "phase": "predictive", "popUp": { "type": "amplify", "msg": "AI predicts surge 24hrs ahead — no scramble" } },
                { "from": "fleet-planner", "to": "dispatch-svc", "text": "Auto-schedule: call in 2 reserve drivers, adjust shifts", "status": "ready", "phase": "predictive" },
                { "from": "demand-forecast", "to": "business-db", "text": "Log forecast + actuals for model retraining", "status": "ready", "phase": "predictive" },
                { "from": "analytics-dash", "to": "business-db", "text": "Dynamic pricing: +15% surge for same-day rush", "status": "ready", "phase": "predictive", "popUp": { "type": "amplify", "msg": "Surge pricing captures value during peak demand" } }
            ]
        }
    ],

