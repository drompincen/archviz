{
    "title": "IoT Sensor Monitoring",
    "notes": "Project: Smart Factory\nTeam: IoT Platform\n\nArchitecture:\n- Edge sensors publish telemetry\n- MQTT broker aggregates streams\n- AI agent detects anomalies\n- Alerts pushed to operator dashboard\n\nStatus: Pilot Deployment",
    "nodes": [
        { "id": "sensor", "type": "service", "tag": "external", "label": "Edge\nSensors", "x": 50, "y": 200, "w": 110, "h": 70 },
        { "id": "mqtt", "type": "service", "tag": "core", "label": "MQTT\nBroker", "x": 250, "y": 200, "w": 120, "h": 80, "status": "ready" },
        { "id": "ingest", "type": "service", "tag": "core", "label": "Ingest\nService", "x": 460, "y": 200, "w": 120, "h": 80, "status": "ready" },
        { "id": "tsdb", "type": "database", "tag": "new", "label": "Time-Series\nDB", "x": 460, "y": 370, "w": 120, "h": 70, "status": "ready", "skipSequence": true },
        { "id": "anomaly", "type": "agent", "tag": "agent", "label": "Anomaly\nDetector", "x": 680, "y": 110, "w": 120, "h": 70, "status": "wip" },
        { "id": "rules", "type": "service", "tag": "new", "label": "Rules\nEngine", "x": 680, "y": 280, "w": 120, "h": 70, "status": "wip" },
        { "id": "dashboard", "type": "service", "tag": "core", "label": "Operator\nDashboard", "x": 900, "y": 200, "w": 120, "h": 80, "status": "ready" },
        { "id": "operator", "type": "user", "tag": "external", "label": "Operator", "x": 900, "y": 380, "w": 100, "h": 70 }
    ],
    "connections": [
        { "from": "sensor", "to": "mqtt" },
        { "from": "mqtt", "to": "ingest" },
        { "from": "ingest", "to": "tsdb" },
        { "from": "ingest", "to": "anomaly" },
        { "from": "ingest", "to": "rules" },
        { "from": "anomaly", "to": "dashboard" },
        { "from": "rules", "to": "dashboard" },
        { "from": "dashboard", "to": "operator" }
    ],
    "sequence": [
        { "from": "sensor", "to": "mqtt", "text": "Publish telemetry data", "status": "ready" },
        { "from": "mqtt", "to": "ingest", "text": "Forward message batch", "status": "ready" },
        { "from": "ingest", "to": "tsdb", "text": "Persist raw readings", "status": "ready" },
        { "from": "ingest", "to": "anomaly", "text": "Stream to ML model", "status": "wip" },
        { "from": "anomaly", "to": "dashboard", "text": "Anomaly detected: Temp spike", "status": "wip" },
        { "from": "ingest", "to": "rules", "text": "Evaluate threshold rules", "status": "wip" },
        { "from": "rules", "to": "dashboard", "text": "Trigger alert", "status": "wip" },
        { "from": "dashboard", "to": "operator", "text": "Push notification", "status": "ready" }
    ]
}
